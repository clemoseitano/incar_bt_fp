<resources>

    <!-- Base application theme. -->
    <style name="FPAppTheme" parent="FPAppTheme.Base">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/fp_colorPrimary</item>
        <item name="colorPrimaryDark">@color/fp_colorPrimaryDark</item>
        <item name="colorAccent">@color/fp_colorAccent</item>
    </style>

    <style name="FPAppTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <!-- 使用 API Level 22 编译的話，要拿掉前缀字 -->
        <item name="windowNoTitle">true</item>
        <!-- Actionbar color -->
        <item name="colorPrimary">@color/fp_colorPrimary</item>
        <item name="android:windowBackground">@color/fp_write</item>
        <item name="android:actionButtonStyle">@color/fp_gray</item>
    </style>

    <!--popupTheme-->
    <style name="FPToolbarPopupTheme" parent="@style/ThemeOverlay.AppCompat.Light">
        <!--<item name="android:colorBackground">#000000</item> 也可以设置背景色以及menu中的其他属性-->
        <item name="actionOverflowMenuStyle">@style/FPOverflowMenuStyle</item>
    </style>
    <style name="FPOverflowMenuStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>  <!--设置不覆盖锚点-->
    </style>

    <!--button的颜色-->
    <style name="FPAutoButton" parent="Theme.AppCompat.Light">
        <item name="buttonBarButtonStyle">@color/button_material_light</item>
    </style>

    <style name="FPDialog" parent="@android:style/Theme.Dialog">
    </style>

    <style name="FPMyMaterialTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/fp_colorPrimary</item>
        <item name="colorPrimaryDark">@color/fp_colorPrimaryDark</item>
        <item name="colorAccent">@color/fp_colorAccent</item>
    </style>

    <style name="FPAppPrimaryTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/fp_colorPrimary</item>
        <item name="colorPrimaryDark">@color/fp_colorPrimaryDark</item>
        <item name="colorAccent">@color/fp_colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="color">@android:color/white</item>
    </style>
</resources>
